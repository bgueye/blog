
<section>

  <header>
    <h1>La liste des posts de mon plog</h1>
    <nav><%= link_to "Mon Blog", posts_path %></nav>
  </header>

  <article>
    <table border="1">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Titre</th>
          <th>Contenu</th>
          <th colspan="3"> menu</th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.name %></td>
            <td><%= post.titre %></td>
            <td><%= post.contenu %></td>
            <td><%= link_to 'Voir', post %></td>
            <td><%= link_to 'Editer', edit_post_path(post) %></td>
            <td><%= link_to 'Detruir', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </article>
  <aside>
   <%= link_to 'New Post', new_post_path %>
  </aside>
