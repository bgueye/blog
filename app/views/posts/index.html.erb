<h1>Listing posts</h1>

<table border="1">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Titre</th>
      <th>Contenu</th>
      <th colspan="3"> menu</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.titre %></td>
        <td><%= post.contenu %></td>
        <td><%= link_to 'Voir', post %></td>
        <td><%= link_to 'Editer', edit_post_path(post) %></td>
        <td><%= link_to 'Detruir', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
